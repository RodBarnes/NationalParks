<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:NationalParks.ViewModels"
             xmlns:controls="clr-namespace:NationalParks.Controls"
             xmlns:converters="clr-namespace:NationalParks.Converters"
             x:Class="NationalParks.Views.CampgroundDetailPage"
             x:DataType="vm:CampgroundDetailVM"
             Title="{Binding Campground.Name}">
    <ContentPage.Resources>
        <converters:BoolToTrueFalseConverter x:Key="boolToTrueFalse" />
    </ContentPage.Resources>
    <Grid ColumnDefinitions="*,*,*"
          RowDefinitions="Auto,*,Auto">
        <BoxView BackgroundColor="{StaticResource Primary}"
                 Grid.Row="0"
                 Grid.ColumnSpan="3"
                 HorizontalOptions="Fill"
                 VerticalOptions="Fill"/>
        <Border StrokeShape="RoundRectangle 10"
                Grid.Row="0"
                Grid.Column="1"
                Stroke="White"
                StrokeThickness="6"
                HeightRequest="175"
                WidthRequest="175"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Margin="0,0,0,8">
            <Image Source="{Binding Campground.MainImage}"
                   Aspect="AspectFill"
                   HeightRequest="160"
                   WidthRequest="160"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"/>
        </Border>
        <ScrollView BackgroundColor="{AppThemeBinding Light={StaticResource Background}, Dark={StaticResource BackgroundDark}}"
                    Grid.Row="1"
                    Grid.ColumnSpan="3">
            <VerticalStackLayout Padding="10" Spacing="10">

                <controls:HyperlinkLabel Text="Regulations" 
                                         Url="{Binding Campground.RegulationsUrl}" 
                                         IsVisible="{Binding Path=Campground.HasRegulationsUrl, Converter={StaticResource boolToTrueFalse}}" />
                <controls:HyperlinkLabel Text="Reservations" 
                                         Url="{Binding Campground.ReservationUrl}" 
                                         IsVisible="{Binding Path=Campground.HasReservationUrl, Converter={StaticResource boolToTrueFalse}}"/>
                <Label Text="{Binding Campground}" Style="{StaticResource LabelLarge}"/>
                <Label Text="{Binding Campground.Description}" Style="{StaticResource LabelMedium}" />
                <Label Text="Amenities" Style="{StaticResource LabelMedium}" />
                <Grid ColumnDefinitions="*,*" Margin="10,0">
                    <VerticalStackLayout Grid.Column="0">
                        <Label Text="{Binding Campground.Amenities.Amphitheater, StringFormat='Amphitheater: {0}'}" Style="{StaticResource LabelSmall}" />
                        <Label Text="{Binding Campground.Amenities.FirewoodForSale, StringFormat='Fire Wood: {0}'}" Style="{StaticResource LabelSmall}" />
                        <Label Text="{Binding Campground.Amenities.IceAvailableForSale, StringFormat='Ice: {0}'}" Style="{StaticResource LabelSmall}" />
                        <Label Text="{Binding Campground.Amenities.CampStore, StringFormat='Camp Store: {0}'}" Style="{StaticResource LabelSmall}" />
                        <Label Text="{Binding Campground.Amenities.FoodStorageLockers, StringFormat='Food Lockers: {0}'}" Style="{StaticResource LabelSmall}" />
                    </VerticalStackLayout>
                    <VerticalStackLayout Grid.Column="1">
                        <Label Text="{Binding Campground.Amenities.DumpStation, StringFormat='Dump Station: {0}'}" Style="{StaticResource LabelSmall}" />
                        <Label Text="{Binding Campground.Amenities.Laundry, StringFormat='Laundry: {0}'}" Style="{StaticResource LabelSmall}" />
                        <Label Text="{Binding Campground.Amenities.InternetConnectivity, StringFormat='Internet: {0}'}" Style="{StaticResource LabelSmall}" />
                        <Label Text="{Binding Campground.Amenities.CellPhoneReception, StringFormat='Cellular: {0}'}" Style="{StaticResource LabelSmall}" />
                    </VerticalStackLayout>
                </Grid>
                <Label Text="Accessibility" Style="{StaticResource LabelMedium}" />
                <Grid ColumnDefinitions="*,*" Padding="10">
                    <VerticalStackLayout Grid.Column="0">
                        <Label Text="{Binding Campground.Accessibility.CellPhoneInfo, StringFormat='Cellular: {0}'}" Style="{StaticResource LabelSmall}" />
                        <Label Text="{Binding Campground.Accessibility.InternetInfo, StringFormat='Internet: {0}'}" Style="{StaticResource LabelSmall}" />
                        <Label Text="{Binding Campground.Accessibility.WheelchairAccess, StringFormat='Wheelchair: {0}'}" Style="{StaticResource LabelSmall}" />
                        <Label Text="{Binding Campground.Accessibility.AdaInfo, StringFormat='ADA Info: {0}'}" Style="{StaticResource LabelSmall}" />
                    </VerticalStackLayout>
                    <VerticalStackLayout Grid.Column="1">
                        <Label Text="{Binding Campground.Accessibility.RvAllowed, StringFormat='RV Allowed: {0}'}" Style="{StaticResource LabelSmall}" />
                        <Label Text="{Binding Campground.Accessibility.RvMaxLength, StringFormat='RV Max Ln: {0}'}" Style="{StaticResource LabelSmall}" />
                        <Label Text="{Binding Campground.Accessibility.RvInfo, StringFormat='RV Info: {0}'}" Style="{StaticResource LabelSmall}" />
                        <Label Text="{Binding Campground.Accessibility.TrailerAllowed, StringFormat='Trailer Allowed: {0}'}" Style="{StaticResource LabelSmall}" />
                        <Label Text="{Binding Campground.Accessibility.TrailerMaxLength, StringFormat='Trailer Max Ln: {0}'}" Style="{StaticResource LabelSmall}" />
                    </VerticalStackLayout>
                </Grid>
                <Label Text="{Binding Campground.DirectionsOverview}" Style="{StaticResource LabelMedium}" />
                <Label Text="{Binding Campground.WeatherOverview}" Style="{StaticResource LabelMedium}" />
                <Label Text="{Binding Campground.ReservationInfo}" Style="{StaticResource LabelMedium}" />
                <Label Text="{Binding Campground.RegulationsOverview}" Style="{StaticResource LabelMedium}" />
            </VerticalStackLayout>
        </ScrollView>
        <Button Text="Location" 
                Command="{Binding OpenMapCommand}"
                Grid.Row="2"
                Grid.Column="0"
                HorizontalOptions="Start" 
                WidthRequest="100" 
                Margin="8"
                Style="{StaticResource ButtonOutline}"/>
        <Button Text="Hours" 
                Command="{Binding GoToHoursCommand}"
                Grid.Row="2"
                Grid.Column="1"
                HorizontalOptions="Center" 
                WidthRequest="100" 
                Margin="8"
                Style="{StaticResource ButtonOutline}"/>
        <Button Text="Images" 
                Command="{Binding GoToImagesCommand}"
                Grid.Row="2"
                Grid.Column="2"
                HorizontalOptions="End" 
                WidthRequest="100" 
                Margin="8"
                Style="{StaticResource ButtonOutline}"/>
    </Grid>
</ContentPage>