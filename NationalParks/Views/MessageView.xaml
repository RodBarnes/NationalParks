<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:NationalParks.ViewModels"
             x:DataType="vm:MessageVM"
             x:Class="NationalParks.Views.MessageView"
             IsVisible="{Binding IsVisible}">
    <Frame Style="{StaticResource MessagPanel}" VerticalOptions="Center" >
        <VerticalStackLayout>
            <Label Text="{Binding Text}"
                   Style="{StaticResource LabelMediumBold}"
                   HorizontalTextAlignment="Center"
                   Margin="0,0,0,5"/>
            <Button Text="{Binding ButtonText}"
                    Command="{Binding HideMessageCommand}"
                    Style="{StaticResource ButtonOutline}"/>
        </VerticalStackLayout>
    </Frame>
</ContentView>
