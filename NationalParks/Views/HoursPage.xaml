<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:NationalParks.ViewModels"
             x:Class="NationalParks.Views.HoursPage"
             x:DataType="vm:HoursVM"
             Title="{Binding Title}">
    <VerticalStackLayout>
        <Label 
            Text="{Binding Park.Name, StringFormat='Hours for {0}'}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <CollectionView
            ItemsSource="{Binding Park.OperatingHours}">
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>