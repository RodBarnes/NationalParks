<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:tk="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:vm="clr-namespace:NationalParks.ViewModels"
             xmlns:v="clr-namespace:NationalParks.Views"
             x:DataType="vm:ListVM"
             x:Class="NationalParks.Views.NewsReleaseListPage"
             Title="{Binding Title}">
    <ContentPage.Behaviors>
        <tk:EventToCommandBehavior EventName="Appearing"
                                   Command="{Binding PopulateDataCommand}" />
    </ContentPage.Behaviors>
    <v:ListView />
</ContentPage>