<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:NationalParks.ViewModels"
             xmlns:model="clr-namespace:NationalParks.Models"
             x:DataType="vm:TourFilterVM"
             x:Class="NationalParks.Views.TourFilterPage"
             Title="{Binding Title}">
    <ContentPage.Resources>
        <vm:FilterVM x:Key="Filter"/>
    </ContentPage.Resources>
    <Grid
        ColumnDefinitions="*,*"
        RowDefinitions="25,*,25,*,25,*,60"
        RowSpacing="0"
        VerticalOptions="FillAndExpand">
        <Label Text="States"
               Grid.Row ="0" Grid.ColumnSpan="2"
               Style="{StaticResource LabelLargeBold}"
               HorizontalOptions="FillAndExpand"
               HorizontalTextAlignment="Center"/>
        <Frame BorderColor="{StaticResource Primary}"
               Grid.Row="1" Grid.ColumnSpan="2"
               CornerRadius="12">
            <CollectionView ItemsSource="{Binding Source={x:Static vm:FilterVM.StateSelections}}"
                            SelectionMode="Multiple"
                            SelectedItems="{Binding SelectedStates}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="model:State">
                        <VerticalStackLayout>
                            <Label Style="{StaticResource LabelMedium}" Text="{Binding Name}" />
                        </VerticalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Frame>
        <Label Text="Topics"
               Grid.Row="2" Grid.ColumnSpan="2"
               Style="{StaticResource LabelLargeBold}"
               HorizontalOptions="FillAndExpand"
               HorizontalTextAlignment="Center"/>
        <Frame BorderColor="{StaticResource Primary}"
               Grid.Row="3" Grid.ColumnSpan="2"
               CornerRadius="12">
            <CollectionView ItemsSource="{Binding Source={x:Static vm:FilterVM.TopicSelections}}"
                            SelectionMode="Multiple"
                            SelectedItems="{Binding SelectedTopics}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="model:Topic">
                        <VerticalStackLayout>
                            <Label Style="{StaticResource LabelMedium}" Text="{Binding Name}" />
                        </VerticalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Frame>
        <Label Text="Activities"
               Grid.Row="4" Grid.ColumnSpan="2"
               Style="{StaticResource LabelLargeBold}"
               HorizontalOptions="FillAndExpand"
               HorizontalTextAlignment="Center"/>
        <Frame BorderColor="{StaticResource Primary}"
               Grid.Row="5" Grid.ColumnSpan="2"
               CornerRadius="12">
            <CollectionView ItemsSource="{Binding Source={x:Static vm:FilterVM.ActivitySelections}}"
                            SelectionMode="Multiple"
                            SelectedItems="{Binding SelectedActivities}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="model:Topic">
                        <VerticalStackLayout>
                            <Label Style="{StaticResource LabelMedium}" Text="{Binding Name}" />
                        </VerticalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Frame>
        <Button
            Text="Apply"
            Grid.Row="6"
            Grid.Column="0"
            Margin="8"
            VerticalOptions="End"
            Command="{Binding ApplyFilterCommand}"
            IsEnabled="{Binding IsNotBusy}"
            Style="{StaticResource ButtonOutline}"/>
        <Button
            Text="Clear"
            Grid.Row="6"
            Grid.Column="1"
            Margin="8"
            VerticalOptions="End"
            Command="{Binding ClearFilterCommand}"
            IsEnabled="{Binding IsNotBusy}"
            Style="{StaticResource ButtonOutline}"/>
    </Grid>
</ContentPage>