<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:NationalParks.ViewModels"
             x:DataType="vm:ListVM"
             x:Class="NationalParks.Views.ProgressBarView">
    <Frame Style="{StaticResource ProgressBar}" >
        <VerticalStackLayout>
            <Label Text="{Binding ProgressText}"
                   Style="{StaticResource LabelMedium}"/>
            <ProgressBar ProgressColor="Green"
                         Progress="{Binding ProgressClosest}" />
            <Button Text="Cancel"
                    Style="{StaticResource ButtonOutline}"
                    Command="{Binding CancelGetClosestCommand}"/>
        </VerticalStackLayout>
    </Frame>
</ContentView>
